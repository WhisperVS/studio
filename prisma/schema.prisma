// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Asset {
  id        String   @id @default(cuid())
  machineName String
  category  String
  systemOS  String?
  location  String
  manufacturer String
  partNumber  String?
  modelNumber String?
  serialNumber String?
  type      String?
  assignedUser String?
  userId    String?
  userType  String?
  owner     String
  status    String
  notes     String?
  purchaseDate DateTime?
  warrantyExpirationDate DateTime?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
